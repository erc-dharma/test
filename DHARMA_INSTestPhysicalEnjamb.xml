            <div type="edition">

<!--For testing how we deal @enjamb in the physical display.-->

<!--Output must be: foo bar-->
<lg>
    <l>foo</l>
    <l>bar</l>
</lg>

<!--Output must be: foo bar-->
<lg>
    <l enjamb="no">foo</l>
    <l>bar</l>
</lg>

<!--Output must be: foobar-->
<lg>
    <l enjamb="yes">foo</l>
    <l>bar</l>
</lg>

<!--This encoding is incorrect. The result must be "foo bar". And the @break
produced on the second verse-line should have @break="yes"-->
<lg>
    <l>foo</l>
    <l enjamb="yes">bar</l>
</lg>

            </div>
        </body>
    </text>
</TEI>
